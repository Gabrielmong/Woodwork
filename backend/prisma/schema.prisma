generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String       @id @default(uuid())
  username         String       @unique
  email            String?      @unique
  password         String
  firstName        String
  lastName         String
  dateOfBirth      DateTime?
  hasAcceptedTerms Boolean      @default(false)
  imageData        String?
  isDeleted        Boolean      @default(false)
  createdAt        DateTime     @default(now())
  updatedAt        DateTime     @updatedAt
  consumables      Consumable[]
  finishes         Finish[]
  lumber           Lumber[]
  projects         Project[]
  settings         Settings?
  sheetGoods       SheetGood[]
  tools            Tool[]

  @@index([username])
  @@index([email])
  @@index([isDeleted])
  @@map("users")
}

model Lumber {
  id               String   @id @default(uuid())
  name             String
  description      String
  jankaRating      Float
  costPerBoardFoot Float
  tags             String[]
  isDeleted        Boolean  @default(false)
  createdAt        DateTime @default(now())
  updatedAt        DateTime @updatedAt
  userId           String
  boards           Board[]
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDeleted])
  @@map("lumber")
}

model Finish {
  id              String          @id @default(uuid())
  name            String
  description     String
  price           Float
  tags            String[]
  storeLink       String?
  imageData       String?
  isDeleted       Boolean         @default(false)
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt
  userId          String
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectFinishes ProjectFinish[]

  @@index([userId])
  @@index([isDeleted])
  @@map("finishes")
}

model SheetGood {
  id                String             @id @default(uuid())
  name              String
  description       String
  width             Float
  length            Float
  thickness         Float
  price             Float
  materialType      String
  tags              String[]
  isDeleted         Boolean            @default(false)
  createdAt         DateTime           @default(now())
  updatedAt         DateTime           @updatedAt
  userId            String
  projectSheetGoods ProjectSheetGood[]
  user              User               @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDeleted])
  @@map("sheet_goods")
}

model Consumable {
  id                 String              @id @default(uuid())
  name               String
  description        String
  packageQuantity    Int
  price              Float
  tags               String[]
  storeLink          String?
  imageData          String?
  isDeleted          Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  userId             String
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)
  projectConsumables ProjectConsumable[]

  @@index([userId])
  @@index([isDeleted])
  @@map("consumables")
}

model Project {
  id                 String              @id @default(uuid())
  name               String
  description        String
  laborCost          Float               @default(0)
  miscCost           Float               @default(0)
  additionalNotes    String?
  isDeleted          Boolean             @default(false)
  createdAt          DateTime            @default(now())
  updatedAt          DateTime            @updatedAt
  userId             String
  status             ProjectStatus       @default(PRICE)
  price              Float               @default(0)
  measurementUnit    String              @default("inches")
  boards             Board[]
  projectConsumables ProjectConsumable[]
  projectFinishes    ProjectFinish[]
  projectSheetGoods  ProjectSheetGood[]
  cutLists           CutList[]
  user               User                @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDeleted])
  @@index([status])
  @@map("projects")
}

model Board {
  id        String   @id @default(uuid())
  width     Float
  thickness Float
  length    Float
  quantity  Int
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  projectId String
  lumberId  String
  lumber    Lumber   @relation(fields: [lumberId], references: [id])
  project   Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([lumberId])
  @@map("boards")
}

model ProjectSheetGood {
  id          String    @id @default(uuid())
  quantity    Int
  createdAt   DateTime  @default(now())
  updatedAt   DateTime  @updatedAt
  projectId   String
  sheetGoodId String
  project     Project   @relation(fields: [projectId], references: [id], onDelete: Cascade)
  sheetGood   SheetGood @relation(fields: [sheetGoodId], references: [id])

  @@index([projectId])
  @@index([sheetGoodId])
  @@map("project_sheet_goods")
}

model ProjectConsumable {
  id           String     @id @default(uuid())
  quantity     Int
  createdAt    DateTime   @default(now())
  updatedAt    DateTime   @updatedAt
  projectId    String
  consumableId String
  consumable   Consumable @relation(fields: [consumableId], references: [id])
  project      Project    @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([consumableId])
  @@map("project_consumables")
}

model ProjectFinish {
  id             String   @id @default(uuid())
  quantity       Int      @default(1)
  percentageUsed Float    @default(100)
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  projectId      String
  finishId       String
  finish         Finish   @relation(fields: [finishId], references: [id])
  project        Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@unique([projectId, finishId])
  @@index([projectId])
  @@index([finishId])
  @@map("project_finishes")
}

model Tool {
  id           String   @id @default(uuid())
  name         String
  description  String
  function     String
  price        Float
  serialNumber String?
  imageData    String?
  isDeleted    Boolean  @default(false)
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
  userId       String
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([isDeleted])
  @@map("tools")
}

model CutList {
  id          String   @id @default(uuid())
  width       Float
  thickness   Float
  length      Float
  quantity    Int
  description String?
  isCompleted Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  projectId   String
  project     Project  @relation(fields: [projectId], references: [id], onDelete: Cascade)

  @@index([projectId])
  @@index([isCompleted])
  @@map("cut_lists")
}

model Settings {
  id        String   @id @default(uuid())
  userId    String   @unique
  currency  String   @default("USD")
  language  String   @default("en")
  themeMode String   @default("light")
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("settings")
}

enum ProjectStatus {
  PLANNED
  IN_PROGRESS
  FINISHING
  COMPLETED
  PRICE
}
